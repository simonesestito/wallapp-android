<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="it.simonesestito.wallapp.ui.fragment.CategoriesFragment"
        tools:layout="@layout/categories_fragment" >
        <action
            android:id="@+id/toCategory"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fast_fade_out"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="it.simonesestito.wallapp.ui.fragment.CategoryFragment"
        tools:layout="@layout/category_fragment" >
        <argument
            android:name="categoryId"
            app:type="string" />
    </fragment>
</navigation>