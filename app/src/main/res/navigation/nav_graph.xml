<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="it.simonesestito.wallapp.ui.fragment.CategoriesListFragment"
        tools:layout="@layout/categories_fragment">
        <action
            android:id="@+id/toCategory"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fast_fade_out"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="it.simonesestito.wallapp.ui.fragment.SingleCategoryFragment">
        <action
            android:id="@+id/toWallpaperDetails"
            app:destination="@id/wallpaperFragment" />
        <argument
            android:name="category"
            app:argType="it.simonesestito.wallapp.backend.model.Category" />
    </fragment>
    <fragment
        android:id="@+id/wallpaperFragment"
        android:name="it.simonesestito.wallapp.ui.fragment.WallpaperFragment">
        <argument
            android:name="wallpaperId"
            app:argType="string" />
        <argument
            android:name="categoryId"
            app:argType="string" />
        <argument
            android:name="transitionName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="https://wallapp-b7805.firebaseapp.com/{categoryId}/{wallpaperId}"
            tools:targetApi="m" />
    </fragment>
</navigation>