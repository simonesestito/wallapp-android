<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallpaperBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="@dimen/bottom_sheet_elevation"
    android:minHeight="200dp"
    android:orientation="vertical"
    android:padding="@dimen/activity_content_margin"
    app:behavior_hideable="true"
    app:behavior_skipCollapsed="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_separator_normal"
        android:gravity="center_horizontal"
        android:text="@string/fab_wallpaper_action_download"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@android:color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_separator_small"
        android:text="@string/wallpaper_setup_bottom_sheet_location"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/dark_gray" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/wallpaperLocationChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_separator_normal"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperLocationChipHome"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_setup_location_home" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperLocationChipLock"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_setup_location_lock" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperLocationChipBoth"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_setup_location_both" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wallpaper_setup_bottom_sheet_format"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/dark_gray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_separator_small"
        android:text="@string/wallpaper_setup_bottom_sheet_format_description"
        android:textColor="@color/light_gray" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/wallpaperFormatChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_separator_normal"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperFormatChip16_9"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_format_16_9" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperFormatChip18_9"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_format_18_9" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperFormatChipIphone"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_format_iphone" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wallpaperFormatChipIphoneX"
            style="@style/AppTheme.OutlineChip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallpaper_format_iphone_x" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/wallpaper_setup_apply_button"
        android:textColor="@color/outline_button_content_color"
        app:icon="@drawable/ic_check_black_24dp"
        app:iconTint="@color/outline_button_content_color" />

</androidx.appcompat.widget.LinearLayoutCompat>