<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/preview_floating_window_width"
    android:layout_height="wrap_content"
    android:background="@drawable/preview_floating_window_background"
    android:padding="@dimen/margin_separator_normal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/previewWindowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preview_mode_title"
        android:textAppearance="@style/AppTheme.Text.Title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/previewWindowSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_separator_small"
        android:text="@string/preview_mode_request"
        android:textAppearance="@style/AppTheme.Text.Subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewWindowTitle" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/previewModeButtonPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_separator_small"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_check_black_24dp"
        android:tint="@color/wallpaper_feedback_positive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/previewModeButtonNegative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/previewWindowSubtitle" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/previewModeButtonNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_separator_small"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/wallpaper_feedback_negative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/previewModeButtonPositive"
        app:layout_constraintTop_toBottomOf="@id/previewWindowSubtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
