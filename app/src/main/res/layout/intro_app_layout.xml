<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_background_color">

    <com.github.paolorotolo.appintro.AppIntroViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appIntroBottomBarHeight"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        tools:ignore="ContentDescription">

        <FrameLayout
            android:id="@+id/indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layoutDirection="ltr" />

        <ImageButton
            android:id="@+id/next"
            style="@style/AppIntroButtonStyleCompat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:minWidth="100dp"
            android:tint="@color/intro_next_arrow_color"
            app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        <ImageButton
            android:id="@+id/done"
            style="@style/AppIntroButtonStyleCompat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:tint="@color/intro_done_button_color"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_black_24dp" />

        <ImageButton
            android:id="@+id/back"
            style="@style/AppIntroButtonStyleCompat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:minWidth="100dp"
            android:tint="@color/intro_next_arrow_color"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_navigate_before_black_24dp" />

        <!-- Disabled from IntroActivity -->
        <Button
            android:id="@+id/skip"
            style="@style/AppIntroButtonStyleCompat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:labelFor="@string/app_intro_skip_button"
            android:minWidth="100dp"
            android:text="@string/app_intro_skip_button"
            android:textColor="@android:color/white" />

    </FrameLayout>
</RelativeLayout>